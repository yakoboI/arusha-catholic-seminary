# Arusha Catholic Seminary Frontend Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
REACT_APP_NAME=Arusha Catholic Seminary
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Comprehensive School Management System

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL (development)
REACT_APP_API_URL=http://localhost:8000/api/v1

# Backend API URL (production)
# REACT_APP_API_URL=https://api.arushaseminary.com/api/v1

# API Timeout (in milliseconds)
REACT_APP_API_TIMEOUT=30000

# API Retry Attempts
REACT_APP_API_RETRY_ATTEMPTS=3

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================
# JWT Token storage key
REACT_APP_TOKEN_KEY=arusha_seminary_token

# User data storage key
REACT_APP_USER_KEY=arusha_seminary_user

# Session timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=false
REACT_APP_ENABLE_PWA=false

# =============================================================================
# UI/UX SETTINGS
# =============================================================================
# Default theme
REACT_APP_DEFAULT_THEME=light

# Default language
REACT_APP_DEFAULT_LANGUAGE=en

# Page size for lists
REACT_APP_DEFAULT_PAGE_SIZE=20

# Maximum page size
REACT_APP_MAX_PAGE_SIZE=100

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file size (in bytes)
REACT_APP_MAX_FILE_SIZE=10485760

# Allowed file types
REACT_APP_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx

# Upload directory
REACT_APP_UPLOAD_DIR=uploads

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Toast notification duration (in milliseconds)
REACT_APP_TOAST_DURATION=4000

# Enable sound notifications
REACT_APP_ENABLE_SOUND=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable React Developer Tools
REACT_APP_ENABLE_DEV_TOOLS=true

# Enable detailed logging
REACT_APP_ENABLE_LOGGING=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Google Analytics ID (optional)
REACT_APP_GA_TRACKING_ID=

# Sentry DSN for error tracking (optional)
REACT_APP_SENTRY_DSN=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable HTTPS only (production)
REACT_APP_HTTPS_ONLY=false

# Content Security Policy
REACT_APP_CSP_DEFAULT_SRC="'self'"

# =============================================================================
# CACHING SETTINGS
# =============================================================================
# Enable service worker caching
REACT_APP_ENABLE_CACHING=true

# Cache version
REACT_APP_CACHE_VERSION=1.0.0

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
# Supported languages
REACT_APP_SUPPORTED_LANGUAGES=en,sw

# Default currency
REACT_APP_DEFAULT_CURRENCY=TZS

# Date format
REACT_APP_DATE_FORMAT=DD/MM/YYYY

# Time format
REACT_APP_TIME_FORMAT=HH:mm

# =============================================================================
# REPORTING SETTINGS
# =============================================================================
# Enable report generation
REACT_APP_ENABLE_REPORTS=true

# Report export formats
REACT_APP_REPORT_FORMATS=pdf,csv,excel

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
# Enable health checks
REACT_APP_ENABLE_HEALTH_CHECKS=true

# Health check interval (in seconds)
REACT_APP_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
# Enable automatic backups
REACT_APP_ENABLE_AUTO_BACKUP=false

# Backup retention days
REACT_APP_BACKUP_RETENTION_DAYS=30

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
# Enable email notifications
REACT_APP_ENABLE_EMAIL_NOTIFICATIONS=false

# Email template directory
REACT_APP_EMAIL_TEMPLATE_DIR=templates/email

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# Enable third-party integrations
REACT_APP_ENABLE_INTEGRATIONS=false

# Payment gateway settings
REACT_APP_PAYMENT_GATEWAY=stripe

# SMS gateway settings
REACT_APP_SMS_GATEWAY=twilio

# =============================================================================
# CUSTOMIZATION SETTINGS
# =============================================================================
# School logo URL
REACT_APP_SCHOOL_LOGO=/images/logo.png

# School name
REACT_APP_SCHOOL_NAME=Arusha Catholic Seminary

# School address
REACT_APP_SCHOOL_ADDRESS=Arusha, Tanzania

# School phone
REACT_APP_SCHOOL_PHONE=+255 123 456 789

# School email
REACT_APP_SCHOOL_EMAIL=info@arushaseminary.com

# School website
REACT_APP_SCHOOL_WEBSITE=https://arushaseminary.com

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Build optimization
REACT_APP_BUILD_OPTIMIZE=true

# Source maps (development only)
REACT_APP_GENERATE_SOURCEMAP=true

# Bundle analyzer
REACT_APP_BUNDLE_ANALYZER=false 