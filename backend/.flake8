[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504   # line break after binary operator
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    alembic,
    tests,
    htmlcov,
    .pytest_cache,
    .coverage,
    *.pyc,
    *.pyo,
    *.pyd,
    .Python,
    build,
    develop-eggs,
    dist,
    downloads,
    eggs,
    .eggs,
    lib,
    lib64,
    parts,
    sdist,
    var,
    wheels,
    *.egg-info,
    .installed.cfg,
    *.egg,
    MANIFEST
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S105,S106,S107
    conftest.py:F401
max-complexity = 10 